{
  "functions": [
    {
      "source": "apps/functions",
      "codebase": "default",
      "runtime": "nodejs20",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "src",
        "tests",
        "tsconfig.json",
        "esbuild.config.js"
      ],
      "predeploy": [
        "pnpm --filter @ndc/functions lint",
        "pnpm --filter @ndc/functions build",
        "cp apps/functions/package-deploy.json apps/functions/package.json"
      ],
      "postdeploy": [
        "git checkout apps/functions/package.json"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore/rules/firestore.rules",
    "indexes": "firestore/indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8081
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
