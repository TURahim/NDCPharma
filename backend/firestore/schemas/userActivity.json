{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Activity Schema",
  "description": "User activity tracking for analytics and rate limiting",
  "type": "object",
  "properties": {
    "activityId": {
      "type": "string",
      "description": "Unique activity identifier"
    },
    "userId": {
      "type": "string",
      "description": "User ID"
    },
    "userRole": {
      "type": "string",
      "enum": ["pharmacist", "pharmacy_technician", "admin"],
      "description": "User role"
    },
    "activityType": {
      "type": "string",
      "enum": ["calculation", "login", "logout", "api_call"],
      "description": "Type of activity"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Activity timestamp"
    },
    "metadata": {
      "type": "object",
      "description": "Additional activity metadata",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "statusCode": {
          "type": "number"
        },
        "userAgent": {
          "type": "string"
        },
        "ipAddress": {
          "type": "string"
        }
      }
    },
    "requestCount": {
      "type": "number",
      "description": "Number of requests in this time window (for rate limiting)"
    },
    "windowStart": {
      "type": "string",
      "format": "date-time",
      "description": "Start of rate limiting window"
    },
    "windowEnd": {
      "type": "string",
      "format": "date-time",
      "description": "End of rate limiting window"
    }
  },
  "required": ["activityId", "userId", "activityType", "timestamp"]
}

