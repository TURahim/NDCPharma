{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Calculation Logs Schema",
  "description": "Audit trail for NDC calculations (HIPAA compliant)",
  "type": "object",
  "properties": {
    "logId": {
      "type": "string",
      "description": "Unique log identifier"
    },
    "userId": {
      "type": "string",
      "description": "User ID who performed the calculation"
    },
    "userRole": {
      "type": "string",
      "enum": ["pharmacist", "pharmacy_technician", "admin"],
      "description": "Role of the user"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Calculation timestamp"
    },
    "request": {
      "type": "object",
      "description": "Input request data",
      "properties": {
        "drugName": {
          "type": "string"
        },
        "ndc": {
          "type": "string"
        },
        "sig": {
          "type": "string"
        },
        "daysSupply": {
          "type": "number"
        }
      },
      "required": ["sig", "daysSupply"]
    },
    "response": {
      "type": "object",
      "description": "Calculation response data",
      "properties": {
        "rxcui": {
          "type": "string"
        },
        "recommendedNDCs": {
          "type": "array"
        },
        "totalQuantity": {
          "type": "number"
        },
        "warnings": {
          "type": "array"
        }
      }
    },
    "executionTime": {
      "type": "number",
      "description": "Execution time in milliseconds"
    },
    "aiUsed": {
      "type": "boolean",
      "description": "Whether AI enhancement was used"
    },
    "cached": {
      "type": "boolean",
      "description": "Whether result was served from cache"
    },
    "success": {
      "type": "boolean",
      "description": "Whether calculation was successful"
    },
    "errorCode": {
      "type": "string",
      "description": "Error code if calculation failed"
    },
    "errorMessage": {
      "type": "string",
      "description": "Error message if calculation failed"
    }
  },
  "required": ["logId", "userId", "timestamp", "request", "executionTime", "success"]
}

