{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "@api-contracts": ["../../packages/api-contracts/src/index.ts"],
      "@api-contracts/*": ["../../packages/api-contracts/src/*"],
      "@clients-rxnorm": ["../../packages/clients-rxnorm/src/index.ts"],
      "@clients-rxnorm/*": ["../../packages/clients-rxnorm/src/*"],
      "@clients-openfda": ["../../packages/clients-openfda/src/index.ts"],
      "@clients-openfda/*": ["../../packages/clients-openfda/src/*"],
      "@clients-openai": ["../../packages/clients-openai/src/index.ts"],
      "@clients-openai/*": ["../../packages/clients-openai/src/*"],
      "@domain-ndc": ["../../packages/domain-ndc/src/index.ts"],
      "@domain-ndc/*": ["../../packages/domain-ndc/src/*"],
      "@data-cache": ["../../packages/data-cache/src/index.ts"],
      "@data-cache/*": ["../../packages/data-cache/src/*"],
      "@core-config": ["../../packages/core-config/src/index.ts"],
      "@core-config/*": ["../../packages/core-config/src/*"],
      "@core-guardrails": ["../../packages/core-guardrails/src/index.ts"],
      "@core-guardrails/*": ["../../packages/core-guardrails/src/*"],
      "@utils": ["../../packages/utils/src/index.ts"],
      "@utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
