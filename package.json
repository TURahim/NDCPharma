{
  "name": "@ndc/root",
  "version": "1.0.0",
  "private": true,
  "description": "NDC Packaging & Quantity Calculator - Monorepo Root",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd apps/functions && pnpm serve",
    "deploy:functions": "cd apps/functions && pnpm deploy"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^4.0.8",
    "esbuild": "^0.27.0",
    "esbuild-node-externals": "^1.19.1",
    "esbuild-register": "^3.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "rimraf": "^6.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
